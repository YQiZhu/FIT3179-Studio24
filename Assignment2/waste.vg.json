{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global plastic waste emitted to the ocean(%) of 2019",
  "width": "container",
  "height": 600,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YQiZhu/FIT3179-Studio24/main/Assignment2/data/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YQiZhu/FIT3179-Studio24/main/Assignment2/data/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/YQiZhu/FIT3179-Studio24/main/Assignment2/data/share-of-global-plastic-waste-emitted-to-the-ocean.csv"
            },
            "key": "Entity",
            "fields": [
              "Share of global plastics emitted to ocean"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "field": "Share of global plastics emitted to ocean",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              1,
              3,
              5,
              7
            ],
            "range": [
              "#F0E0B2",
              "#F6DAAC",
              "#F0C89B",
              "#D0AE87",
              "#8D765C"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Share of global plastics emitted to ocean",
            "type": "quantitative",
            "title": "waste emitted to ocean in %"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YQiZhu/FIT3179-Studio24/main/Assignment2/data/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YQiZhu/FIT3179-Studio24/main/Assignment2/data/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgrey"
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 16
    }
  }
}