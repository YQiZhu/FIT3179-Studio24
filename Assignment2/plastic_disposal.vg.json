{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global plastic waste by disposal(%), 2000 to 2015",
    "width": 500,
        "height": 500,
    "params": 
    [
        {
          "name": "Year_selection",
          "value": 2015,
          "bind": {
            "input": "range",
            "min": 2000,
            "max": 2015,
            "step": 1,
            "name": "Year:  "
          }
        },
        {
          "name": "center_to",
          "bind": {
            "input": "select",
            "options": [
                null,
              "Discarded",
              "Incinerated",
              "Recycled"
            ],
            "labels": ["Show All", "Discarded", "Incinerated", "Recycled"],
            "name": "Waste type: "
          }
        }
      ],
    
        "data":{
            "url": "https://raw.githubusercontent.com/YQiZhu/FIT3179-Studio24/main/week10_homework/data/global-plastic-fate.csv"
        },
        "transform": [
            {"filter": "datum.Year == Year_selection"},
            {"filter": "datum.Entity == center_to | center_to == null"}
          ],
        "mark": "bar",
        
        "encoding": {
            "x":{
                "field": "Entity",
                "type":"nominal",
                "axis": {"tickCount": 4}, "title": "Type of waste"
              },
              "y":{
                "field": "Estimated historic plastic fate",
                "type":"quantitative",
                "axis": {"tickCount": 3, "grid": false}
              },
              "tooltip": [
                {"field": "Entity", "type": "ordinal", "title": "Type of waste"},
                {
                  "field": "Estimated historic plastic fate",
                  "type": "quantitative",
                  "title": "Estimated historic plastic fate",
                  "format": ","
                },
                {"field": "Year", "type": "quantitative", "title": "Year"}
              ]
            },
     
    "config": {"title": {"font": "sans-serif", "fontSize": 14}}
  }